<Window x:Class="Tic_Tac_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <WrapPanel x:Name="wp" HorizontalAlignment="Left" Height="300" Margin="182,160,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="New Game" HorizontalAlignment="Left" Margin="45,56,0,0" VerticalAlignment="Top" Width="148" Height="48" FontSize="20" FontWeight="Bold" FontStyle="Italic" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF8D5757" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Level" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" FontStyle="Italic" Margin="45,133,0,0" VerticalAlignment="Top" Height="37" Width="148"/>
        <ComboBox x:Name="cmbx" HorizontalAlignment="Left" Margin="45,192,0,0" VerticalAlignment="Top" Width="120" FontSize="20" FontWeight="Bold" FontStyle="Italic" SelectedIndex="0"/>
    </Grid>
</Window>
